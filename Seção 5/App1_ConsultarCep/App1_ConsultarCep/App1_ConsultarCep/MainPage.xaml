<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_ConsultarCep.MainPage">
    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="20">
        <Image Source="Logo.png" x:Name="Logo"/>
        <Entry x:Name="CEP" Placeholder="Digite o cep." PlaceholderColor="#FFBF00" BackgroundColor="#FFF"/>
        <Button x:Name="BOTAO" Text="BUSCAR CEP" TextColor="#FFF" BackgroundColor="#00416B"/>
        <Label x:Name="RESULTADO" Text=""
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

    </StackLayout>

</ContentPage>

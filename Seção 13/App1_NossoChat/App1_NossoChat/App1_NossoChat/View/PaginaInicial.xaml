<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="App1_NossoChat.View.PaginaInicial"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="NossoChat" TextColor="White" />

            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

                <Entry Style="{StaticResource TextBoxUsuarioSenha}" Text="{Binding Nome}" />
                <Entry Style="{StaticResource TextBoxUsuarioSenha}" Text="{Binding Senha}" />

                <Button
                    BackgroundColor="Transparent"
                    Text="Acessar/Cadastrar"
                    TextColor="White" />

            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
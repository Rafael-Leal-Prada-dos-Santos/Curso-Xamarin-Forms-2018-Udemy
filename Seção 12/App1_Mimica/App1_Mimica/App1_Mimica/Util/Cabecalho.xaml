<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Mimica.Util.Cabecalho">
  <ContentView.Content>
      <StackLayout Style="{StaticResource Cabecalho}" Orientation="Horizontal">
          <Label Text="Jogo de Mímica" Style="{StaticResource CabecalhoTitulo}" VerticalTextAlignment="End" />
            <Label Text="Sair" HorizontalOptions="EndAndExpand">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Comando_Sair}"></TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
  </ContentView.Content>
</ContentView>